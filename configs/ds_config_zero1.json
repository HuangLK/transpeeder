{
    "train_micro_batch_size_per_gpu": 1,
    "train_batch_size": 128,
    "steps_per_print": 100,
    "gradient_clipping": 1.0,
    "lr-decay-style": "cosine",
    "warmup": 0.03,
    "bf16": {
        "enabled": false
    },
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 12,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 1e-5,
            "betas": [0.9, 0.95],
            "eps": 1.0e-8
        }
    },
    "min_lr": 1e-6,
    "zero_optimization": {
        "stage": 1,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "overlap_comm": false,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "contiguous_gradients": true
    },
    "wall_clock_breakdown": true
}
